@import url('https://fonts.googleapis.com/css?family=Mina')
@import url('https://use.fontawesome.com/releases/v5.0.8/css/all.css')

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
html
  height 100%
body
  background url(https://s3.amazonaws.com/chewiekie/img/bg-100tifi.jpg) center center no-repeat
  background-size cover
  min-height 100%
  z-index -9999
  color white
  font-family 'Mina', sans-serif
  font-weight 300
  letter-spacing .03rem
  line-height 1
  margin 0 auto
  height 100% 
  &:before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-image: linear-gradient(black,black)
    opacity .7
    z-index -9998
main
  display grid
  z-index 1
  grid-template-columns 1fr
  grid-template-rows minmax(1fr, 500px)
.heading
  grid-row span 3
  img 
    width 100%
  p 
    text-align right
    text-transform uppercase
    margin-top 10px
.intro
  grid-row span 2
  padding-top 50px
  h2 
    display inline-block
    margin-right 40px
  p 
    margin-top 40px
    font-weight 200
    font-size 18px
.reload 
  grid-column span 3
  h4
    a 
      color white
      text-decoration none
      font-size: 22px
    .blink
      animation-name blinkblink
      animation-duration 1s
      animation-timing-function linear
      animation-iteration-count infinite
    @keyframes blinkblink
      0% 
        opacity 1.0
      50% 
        opacity 0.0
      100% 
        opacity 1.0
.idioms
  grid-column span 1
  list-style-type none
  text-align right 
  li
    display inline
    margin-left 15px
    img 
      width 24px
      cursor pointer
.social
  h3
    font-size 16px
  i 
    font-size 84px
  a
    color white
h1 
  text-align center
  padding 4px
  font-size 30px
h2 
  font-size 22px
  small 
    display block
    font-size 12px 
    font-weight 200
    margin-bottom 10px
    letter-spacing 1.4px
    text-transform uppercase
section:nth-of-type(1)
  background-color #07779c
section:nth-of-type(2)
  background-color #157c89
section:nth-of-type(3)
  background-color #238077
section:nth-of-type(4)
  background-color #318564
section:nth-of-type(5)
  background-color #30336b
section:nth-of-type(6)
  background-color #130f40
section:nth-of-type(7)
  background-color #3b5998
section:nth-of-type(8)
  background-color #1da1f2
section:nth-of-type(9)
  background-color #075e54
section:nth-of-type(10)
  background-color #2d3436
section:nth-of-type(11)
  background-color #2d3436
.loader
	width 100%
	height 100%
	position absolute
	text-align center
	background rgba(0,0,0, 1) !important
	z-index 9999
.loader__animation
	position absolute
	left 50%
	top 50%
	margin -40px 0 0 -40px
	background #FFF url('https://s3.amazonaws.com/chewiekie/img/loader-bg.png') no-repeat
	width 120px
	height 120px
	background-size 125px
	border-radius 100%
	border 2px solid black
	background-position center
	&:after
		content ''
		background trasparent
		width 140%
		height 140%
		position absolute
		border-radius 100%
		top -20%
		left -20%
		opacity 0.7
		box-shadow rgba(255, 255, 255, 0.6) -4px -5px 3px -3px
		animation rotate .6s infinite linear
@keyframes rotate
  0%
    transform rotateZ(0deg)
  100%
    transform rotateZ(360deg)
@media (max-width: 545px)
  body 
    background-repeat repeat
  section 
    padding 25px
    text-align center
  .heading 
    p 
      display none
  .intro 
    h2 
      display block
      margin-right 0
  .reload 
    grid-column span 1
  .idioms
    grid-column span 1
@media (min-width: 34em)
  section
    padding: 2rem
@media (min-width: 34em)
  main
    grid-template-columns repeat(4, 1fr)
@media (min-width: 34em)
  .intro
    grid-column: span 3